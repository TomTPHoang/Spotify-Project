<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spotify Song Guesser</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .spotify-logo {
            transition: transform 0.3s ease, filter 0.3s ease;
        }

            .spotify-logo:hover {
                transform: scale(1.1);
                filter: brightness(1.2);
            }

        /* Footer Styling */
        footer {
            font-size: 0.8rem; /* Smaller text size */
            background-color: #1DB954; /* Spotify green */
            color: white;
            text-align: center;
            padding: 5px 0; /* Reduced padding for a thinner footer */
            margin-top: auto; /* Ensures footer sticks to the bottom */
        }

        /* Footer Link Styling */
        .footer-link {
            text-decoration: underline;
            color: white; /* White color for the link */
        }

            .footer-link:hover {
                color: #1E90FF; /* Blue color on hover */
            }

        /* Ensure footer sticks to the bottom */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body class="spotify-theme">
    <div class="d-flex">
        <nav class="bg-dark text-white p-3" style="width: 250px; height: 100vh; position: fixed;">
            <a href="https://www.spotify.com" target="_blank">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/26/Spotify_logo_with_text.svg/1200px-Spotify_logo_with_text.svg.png" alt="Spotify Logo" class="spotify-logo" style="width: 150px; margin-bottom: 30px;" />
            </a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Contact</a>
                </li>
            </ul>
        </nav>

        <main class="container-fluid" style="margin-left: 260px; padding: 20px;">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <p>&#169; 2024, Spotify Song Guesser</p>
            <p>Created by Thien Hoang, Jason Garcia, Dylan Posey</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
